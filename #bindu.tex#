evaṃ
       \app{\lem[wit={ceteri}]{saṃsārasya}
         \rdg[wit={P,L,U2}]{saṃsāra°}}
       \app{\lem[wit={B,E,L,P}]{svātmano}
         \rdg[wit={X}]{svātmanaḥ}
         \rdg[wit={U2}]{svātmanoḥ}}
       \app{\lem[wit={ceteri}]{bhedaṃ}
         \rdg[wit={B}]{bheda}
         \rdg[wit={D,N1}]{bhedāṃ}}
dūrī\app{\lem[wit={U2},alt={°kṛtyaṃ}]{kṛtyaṃ}
  \rdg[wit={ceteri}]{°kṛtya}
  \rdg[wit={E}]{°kṛty}}
